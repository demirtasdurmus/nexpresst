{
  "name": "nexpresst",
  "version": "1.1.0-rc.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/demirtasdurmus/nexpresst.git"
  },
  "bugs": {
    "url": "https://github.com/demirtasdurmus/nexpresst/issues"
  },
  "homepage": "https://github.com/demirtasdurmus/nexpresst#readme",
  "keywords": [
    "next.js",
    "express",
    "serverless",
    "api",
    "typescript"
  ],
  "author": "Durmus Demirtas",
  "license": "ISC",
  "description": "Write express-like APIs with Next.js serverless functions",
  "scripts": {
    "build": "tsc --pretty -p tsconfig.build.json",
    "start": "node dist/index.js",
    "dev:tsc": "tsc --watch --preserveWatchOutput -p tsconfig.build.json",
    "dev:node": "node --watch dist/index.js",
    "dev": "npm run dev:tsc & npm run dev:node",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint --fix .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.9.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.1.4",
    "@semantic-release/npm": "^12.0.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.3.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "semantic-release": "^24.0.0",
    "tsc-files": "^1.1.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.1.0",
    "vitest": "^2.0.5"
  },
  "dependencies": {
    "next": "^14.2.5"
  }
}
